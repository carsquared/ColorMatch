<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/WinRoundLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorstripesnew1"
    android:orientation="vertical"
    android:padding="16dp"

    >

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/textviewcoinnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:drawableStart="@drawable/cointiny"
            android:gravity="top"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="normal|bold" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.16"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/levelnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 1"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="55sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Complete"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.027"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Final score:"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        />

    <TextView
        android:id="@+id/textViewfinalscorenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="normal|bold"
        />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/view7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.30" />

        <Button
            android:id="@+id/homebutton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/homeicon3" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.30" />

        <Button
            android:id="@+id/redobut"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/restarticon" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.30" />

        <Button
            android:id="@+id/levelselect"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/levelselect1" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.30" />

        <Button
            android:id="@+id/nextlevel"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/nexticon1" />

        <View
            android:id="@+id/view8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.30" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="0.25"
        />

</LinearLayout>